<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Other Message"
        android:id="@+id/txtOtherMessage"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="other time"
        android:id="@+id/txtOtherTime"
        android:layout_alignBottom="@+id/txtOtherMessage"
        android:layout_toRightOf="@+id/txtOtherMessage"
        android:layout_toEndOf="@+id/txtOtherMessage" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:id="@+id/imageView2"
        android:src="@drawable/man"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Username"
        android:id="@+id/txtUsernameOther"
        android:layout_above="@+id/txtOtherMessage"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />
</RelativeLayout>